Bootstrap: docker
From: mambaorg/micromamba

%setup
    mkdir -p ${SINGULARITY_ROOTFS}/input_data
    mkdir -p ${SINGULARITY_ROOTFS}/results
    

%files
    nf-scRNAseq.yaml /nf-scRNAseq.yaml


%post
 apt-get update

    export LANG=C.UTF-8 LC_ALL=C.UTF-8
    export PATH=/opt/conda/bin:$PATH

    micromamba install --yes --name base --file /nf-scRNAseq.yaml

    rm -f /nnf-scRNAseq.yaml

    apt-get clean
    micromamba clean --all --yes

%environment
    export LANG=C.UTF-8 LC_ALL=C.UTF-8
    export PATH=/opt/conda/bin:$PATH

%labels
    Author vjmarteau
    Version v0.0.1